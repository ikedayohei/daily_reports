.header
 =render "header"
  
.main-contents
 .main-contents__1-content
  .user-name-box
   .user-name-box-right
    %p [User-name]
   .user-name-box-user
    = link_to edit_user_path(current_user) do
     = current_user.name

  .fail-box
   .fail-name
    %p [報告一覧]
   .fail-date
    = link_to new_report_path(current_user.id)  do
     = icon('far', 'folder-open', class: 'icon')
     
  .my-page-box
   .my-page-name
    %p [MY-page]
   .my-page-date
    = link_to  user_path(current_user)  do
     =icon('far', 'id-badge', class: 'icon')

  .company-box
   .company-name
    %p [訪問先登録]
   .company-date
    = link_to   companies_path do
     =icon('fas', 'building', class: 'icon')

 .main-contents__2-content
  .report
   .report-title
    %p 報告フォーム
    = form_for [@report] do |f|
     =render partial: "form", locals: { f: f}

 
